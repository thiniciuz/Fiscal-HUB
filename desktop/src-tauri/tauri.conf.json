{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "41 Fiscal Hub",
  "version": "0.1.0",
  "identifier": "com.fiscalhub.desktop",
  "build": {
    "frontendDist": "../../web/dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm --prefix ../web run dev -- --host 127.0.0.1 --port 5173",
    "beforeBuildCommand": "npm --prefix ../web run build"
  },
  "app": {
    "windows": [
      {
        "title": "41 Fiscal Hub",
        "width": 1280,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
